generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Career {
  id         Int       @id @default(autoincrement())
  careerName String
  Course     Course[]
  Student    Student[]
}

model Course {
  id          Int           @id @default(autoincrement())
  courseCode  String
  courseName  String
  credits     Int
  instructor  String
  careerId    Int?
  career      Career?       @relation(fields: [careerId], references: [id])
  performance Performance[]
  student     Student[]
}

model Performance {
  studentId String
  courseId  Int
  note      Int
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@id([studentId, courseId])
}

model Student {
  id          String        @id
  email       String        @unique
  password    String
  firstName   String
  lastName    String
  role          Role     @default(STUDENT)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  careerId    Int?
  career      Career?       @relation(fields: [careerId], references: [id])
  performance Performance[]
  course      Course[]
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}
